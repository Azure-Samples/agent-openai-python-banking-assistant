    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "AccountMCPClient",
            "request": "launch",
            "mainClass": "org.springframework.ai.mcp.sample.client.AccountMCPClient",
            "projectName": "account"
        },
        {
            "type": "java",
            "name": "Debug AccountApplication (dev)",
            "request": "launch",
            "mainClass": "com.microsoft.openai.samples.assistant.business.AccountApplication",
            "projectName": "account",
            "cwd": "${workspaceFolder}/app/business-api/account",
            "env": {
                "spring_profiles_active": "dev"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Debug PaymentApplication (dev)",
            "request": "launch",
            "mainClass": "com.microsoft.openai.samples.assistant.business.PaymentApplication",
            "projectName": "payment",
            "cwd": "${workspaceFolder}/app/business-api/payment",
            "env": {
                "spring_profiles_active": "dev"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Debug TransactionsHistoryApplication (dev)",
            "request": "launch",
            "mainClass": "com.microsoft.openai.samples.assistant.business.TransactionsHistoryApplication",
            "projectName": "transactions-history",
            "cwd": "${workspaceFolder}/app/business-api/transactions-history",
            "env": {
                "spring_profiles_active": "dev"
            },
            "console": "integratedTerminal"
        },
       
        {
            "name": "FastAPI: DEV Debug Copilot App",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--port", "8080"
            ],
            "env": {
                "PROFILE": "dev",
                "AGENT_FRAMEWORK_ENABLE_OTEL": "true",
                "AGENT_FRAMEWORK_ENABLE_SENSITIVE_DATA": "true",
                "AGENT_FRAMEWORK_MONITOR_CONNECTION_STRING": "InstrumentationKey=19cfd90c-d8bf-48d8-9a4d-f14c9e1d5d80;IngestionEndpoint=https://eastus2-3.in.applicationinsights.azure.com/;LiveEndpoint=https://eastus2.livediagnostics.monitor.azure.com/;ApplicationId=af7357f1-f38d-4969-a17f-7e3a9efe8bd1"
            },
            "jinja": true,
            "cwd": "${workspaceFolder}/app/copilot",
            "justMyCode": false

        },
        {
            "name": "FastAPI: No Profile Debug Copilot App",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--port", "8080"
            ],
            "env": {
                "AGENT_FRAMEWORK_ENABLE_OTEL": "true"
            },
            "jinja": true,
            "cwd": "${workspaceFolder}/app/copilot",
            "justMyCode": false

        }
    ]
}
